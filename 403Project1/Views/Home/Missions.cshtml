@model _403Project1.Models.Mission

@{
    ViewBag.Title = "Missions";
}

<head>
    <link href="~/Content/MissionsStyleSheet.css" rel="stylesheet" />
</head>

<body>

    <div class="jumbotron">
        <div class="imgs"></div>

        <h1 class="cont">Mission Maps</h1>
    </div>

    <div class="container">
        <table>
            <tr>
                <td class="shiftright" style="width: 0px">
                    Choose A Mission:
                </td>
                <td class="shiftrights">
                    <div>
                        @using (Html.BeginForm("MissionFAQ", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.DropDownListFor(model => model.mNum, (IEnumerable<SelectListItem>)ViewBag.MissionList)

                            

                            <input type="submit" value="FAQ" class="btn btn-default" />
                        }
                    </div>
                </td>
            </tr>
        </table>

    </div>


</body>
